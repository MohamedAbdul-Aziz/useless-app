<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="EDUO"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/triangle_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:src="@drawable/triangle"
        android:tooltipText="triangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/triangle_edit_text"
        android:layout_width="170dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:hint="What is the shape? "
        app:layout_constraintBottom_toBottomOf="@+id/triangle_image_view"
        app:layout_constraintStart_toEndOf="@+id/triangle_image_view"
        app:layout_constraintTop_toTopOf="@+id/triangle_image_view"
        app:layout_constraintVertical_bias="0.581" />

    <Button
        android:id="@+id/triangle_button"
        style="@android:style/Widget.Material.Light.Button"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="@+id/triangle_edit_text"
        app:layout_constraintStart_toEndOf="@+id/triangle_edit_text"
        app:layout_constraintTop_toTopOf="@+id/triangle_edit_text"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/circle_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/circle"
        android:tooltipText="circle"
        app:layout_constraintEnd_toEndOf="@+id/triangle_image_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/triangle_image_view"
        app:layout_constraintTop_toBottomOf="@+id/triangle_image_view" />

    <EditText
        android:id="@+id/circle_edit_text"
        android:layout_width="170dp"
        android:layout_height="57dp"
        android:hint="What is the shape? "
        app:layout_constraintBottom_toBottomOf="@+id/circle_image_view"
        app:layout_constraintEnd_toEndOf="@+id/triangle_edit_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/triangle_edit_text"
        app:layout_constraintTop_toTopOf="@+id/circle_image_view" />

    <Button
        android:id="@+id/circle_button"
        style="@android:style/Widget.Material.Light.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="@+id/circle_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/triangle_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/triangle_edit_text"
        app:layout_constraintTop_toTopOf="@+id/circle_edit_text" />


    <ImageView
        android:id="@+id/rectangle_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/rectangle"
        android:tooltipText="rectangle"
        app:layout_constraintEnd_toEndOf="@+id/circle_image_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/circle_image_view"
        app:layout_constraintTop_toBottomOf="@+id/circle_image_view" />

    <EditText
        android:id="@+id/rectangle_edit_text"
        android:layout_width="170dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:hint="What is the shape? "
        app:layout_constraintEnd_toEndOf="@+id/circle_edit_text"
        app:layout_constraintStart_toStartOf="@+id/circle_edit_text"
        app:layout_constraintTop_toTopOf="@+id/rectangle_image_view" />

    <Button
        android:id="@+id/rectangle_button"
        style="@android:style/Widget.Material.Light.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/circle_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/circle_button"
        app:layout_constraintTop_toTopOf="@+id/rectangle_edit_text" />


</androidx.constraintlayout.widget.ConstraintLayout>
